{
  "name": "wicap-telemetry-envelope-v2",
  "version": "2.0.0",
  "schema": "wicap.telemetry.v2",
  "telemetry_event_version": "wicap.telemetry.v2",
  "compatibility": {
    "supersedes": "wicap.telemetry.v1",
    "dual_read_write_waves": 2
  },
  "protocol": "otlp",
  "required_signal_types": [
    "traces",
    "metrics",
    "logs"
  ],
  "required_resource_attributes": [
    "service.name",
    "service.version",
    "deployment.environment"
  ],
  "required_span_attributes": [
    "wicap.control.mode",
    "wicap.control.profile",
    "wicap.control.decision",
    "wicap.policy.trace_id",
    "wicap.failover.class",
    "wicap.mission.step"
  ],
  "required_metric_names": [
    "wicap.control.observation.cycles",
    "wicap.control.actions.executed",
    "wicap.anomaly.events.total",
    "wicap.failover.transitions.total",
    "wicap.memory.compactions.total",
    "wicap.certification.pass_rate"
  ],
  "required_log_fields": [
    "timestamp",
    "severity_text",
    "body",
    "attributes"
  ],
  "event_families": [
    "policy.decision",
    "failover.transition",
    "memory.compaction",
    "mission.step",
    "certification.result"
  ],
  "redaction_required": true,
  "otlp_spec_reference": "https://opentelemetry.io/docs/specs/otlp/"
}
